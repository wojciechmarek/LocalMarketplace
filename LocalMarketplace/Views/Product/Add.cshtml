@model LocalMarketplace.Models.DTOs.ProductRequest
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add new product</h2>
<hr />
<h4>Fill fields for new product</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <hr />
            <p>URLs to product photos:</p>
            <div class="form-group">
                <label asp-for="Pictures[0].Url" class="control-label">Photo 1</label>
                <input asp-for="Pictures[0].Url" class="form-control" />
                <span asp-validation-for="Pictures[0].Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pictures[1].Url" class="control-label">Photo 2</label>
                <input asp-for="Pictures[1].Url" class="form-control" />
                <span asp-validation-for="Pictures[1].Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pictures[2].Url" class="control-label">Photo 3</label>
                <input asp-for="Pictures[2].Url" class="form-control" />
                <span asp-validation-for="Pictures[2].Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}